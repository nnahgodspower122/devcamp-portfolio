<tr>
    <td><p><%= blog.title %></p></td>
    <td>Published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago </td>
    <td><p><%= blog.body %></p></td>
    <td><%= link_to blog.status, toggle_status_blog_path(blog) %></td>
    <td><p><%= link_to 'Show', blog %></p></td>
    <td><p><%= link_to 'Edit', edit_blog_path(blog) if logged_in?(:site_admin) %></p></td>
    <td><p><%= link_to 'Delete', blog, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %></p></td>
</tr>